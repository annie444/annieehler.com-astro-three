---
// Component imports
import { Layout } from "~/components/dom"
import ThemeToggle from "~/components/dom/common/ThemeToggle"
import { ErrorPage, type ErrorPageProps } from "~/components/pages"

const errorPageProps: ErrorPageProps = {
	header: {
		text: "404",
		attrs: {
			fontSize: "16rem",
			color: {
				dark: "#fff",
				light: "#000"
			},
			enableHover: true,
			baseIntensity: 0.05,
			hoverIntensity: 0.5
		}
	},
	footer: {
		text: "Page not found",
		attrs: {
			fontSize: "4rem",
			color: {
				dark: "#fff",
				light: "#000"
			},
			enableHover: true,
			baseIntensity: 0.02,
			hoverIntensity: 0.3
		}
	}
}
---

<Layout title="Astro PWA Starter">
	<section class="p-6 flex-1 flex flex-col justify-between min-h-screen py-20">
		<ThemeToggle client:only="react" />
		<ErrorPage {...errorPageProps} client:only="react" />
	</section>
</Layout>
